@model EmpleadosModel


@{
    ViewData["Title"] = "Borrar Empleado";
}

<head>
    <link rel="stylesheet" href="~/css/Empleados-style.css" />
</head>

<h3 class="mb-3"></h3>


<form asp-controller="Empleados" asp-action="EmpleadosDelete">
    <div class="card" style="width 18rem;">
        <div class="card-body">
        <h5 class="card-title">Info del Empleado</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Estas Seguro que deseas la informacion del Empleado??</h6>
        <p class="card-text">Empleado: @Model.nombreEmpleados</p>
        </div>
    </div>


    <div class="buttons">
    <input type="hidden" asp-for="idEmpleados"/>
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="EmpleadosList" asp-controller="Empleados">Cancelar</a>
    </div>
</form>