@model IEnumerable<EmpleadosModel>

@{
    ViewData["Title"] = "Listado de Empleados";
}

<head>
    <link rel="stylesheet" href="~/css/Empleados-style.css" />
</head>

<div class="text-center"></div>
<div class="col text-right">
    <p class="label-gris" style="font-size:160%;">Empleados</p>
</div>
<h1 class="display-2"></h1>
<div class="buttons">
<a asp-action="EmpleadosAdd" asp-controller="Empleados" class="btn btn-primary mb-3">Agregar Empleado</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Puesto</th>
            <th>Email</th>
            <th>Tel√©fono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Emp in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-controller="Empleados" asp-action="EmpleadosEdit" asp-route-Id="@Emp.idEmpleados">Editar</a>
                    <a class="btn btn-danger" asp-controller="Empleados" asp-action="EmpleadosDelete" asp-route-Id="@Emp.idEmpleados">Borrar</a>
                </td>
                <td>@Emp.nombreEmpleados</td>
                <td>@Emp.Puesto</td>
                <td>@Emp.Email</td>
                <td>@Emp.Telefono</td>
            </tr>
        }
    </tbody>
</table>

