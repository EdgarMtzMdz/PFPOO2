@model IEnumerable<InventarioModel>

@{
    ViewData["Title"] = "Lista de Productos";
}

<head>
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="~/css/Inventarios-style.css" />
</head>
<body>
    <br>
    <div class="row">
        <div class="container">
            <div class="search-form">
                <form asp-action="BuscarProducto" method="post">
                    <label for="codBarras">Código de Barras:</label>
                    <input type="text" id="codBarras" name="codBarras" required />
                    <button type="submit">Buscar</button>
                    <a asp-action="InventarioList" asp-controller="Inventario">Mostrar todo</a>
                </form>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <table>
                <thead>
                    <tr>
                        <th>Acciones</th>
                        <th>Código de Barras</th>
                        <th>Código Proveedor</th>
                        <th>Nombre</th>
                        <th>Costo</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pro in Model)
                    {
                        <tr>
                            <td>
                                <div class="buttons">
                                    <a class="btn btn-outline-info" asp-action="InventarioEdit" asp-controller="Inventario" asp-route-codBarras="@pro.codBarras">Editar</a>
                                    <a class="btn btn-outline-info" asp-action="InventarioDeleted" asp-controller="Inventario" asp-route-codBarras="@pro.codBarras">Borrar</a>
                                </div>
                            </td>
                            <td>@pro.codBarras</td>
                            <td>@pro.codProveedor</td>
                            <td>@pro.nombreProducto</td>
                            <td>@pro.costoProducto</td>
                            <td>@pro.cantProducto</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="buttons">
                <a asp-action="InventarioAdd" asp-controller="Inventario">Agregar Producto</a>
            </div>
        </div>
    </div>
</body>

